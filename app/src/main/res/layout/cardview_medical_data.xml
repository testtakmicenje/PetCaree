<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/cardview"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="30dp"
        >

        <RelativeLayout
            android:layout_width="402dp"
            android:layout_height="match_parent"
            android:padding="10dp">

            <!-- Ovdje zadržite postojeće TextView-e, ali prilagodite ih prema vašim podacima. -->

            <TextView
                android:id="@+id/medicalConditionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/textViewPhone"
                android:textColor="@color/crna2"
                />

            <TextView
                android:id="@+id/medicationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/startdate"
                android:textColor="@color/crna2"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Ovdje zadržite postojeće ImageView-e, ali prilagodite ih prema vašim potrebama. -->

            <ImageView
                android:id="@+id/buttonDeleteMedicalData"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:tint="@color/rosa"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/buttonEditMedicalData"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                app:tint="@color/rosa"
                android:src="@drawable/ic_edit" />
            <!-- Dodajte nove TextView-e za prikaz imena i vrste životinje -->
            <TextView
                android:id="@+id/animalNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/textViewPhone"
                android:textColor="@color/crna2"
                />

            <TextView
                android:id="@+id/animalTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/startdate"
                android:textColor="@color/crna2"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
