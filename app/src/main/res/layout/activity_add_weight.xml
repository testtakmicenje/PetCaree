<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crna2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/logoImageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unesite te탑inu"
            android:textSize="22sp"
            android:textColor="@color/rosa"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dateEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datum:"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white" />

            <!-- Dodan DatePicker umjesto EditText za unos datuma -->
            <DatePicker
                android:id="@+id/dateDatePicker"
                android:layout_width="379dp"
                android:layout_height="191dp"
                android:layout_marginTop="10dp"
                android:calendarViewShown="false"
                android:layout_gravity="center"
                android:datePickerMode="spinner"
                android:spinnersShown="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vrsta ljubimca:"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_below="@+id/dateDatePicker"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/petTypeEditText"
                android:layout_width="376dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColorHint="#FFFFFF"
                android:hint="Unesite vrstu ljubimca."
                android:layout_below="@+id/dateDatePicker"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ime ljubimca:"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_below="@+id/petTypeEditText"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/petNameEditText"
                android:layout_width="378dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColorHint="#FFFFFF"
                android:hint="Unesite ime ljubimca."
                android:layout_below="@+id/petTypeEditText"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Te탑ina:"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_below="@+id/petNameEditText"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="378dp"
                android:layout_height="55dp"
                android:hint="Unesite te탑inu."
                android:inputType="numberDecimal"
                android:textColorHint="#FFFFFF"
                android:layout_below="@+id/petNameEditText"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />
            <Button
                android:id="@+id/addWeightButton"
                android:layout_width="260dp"
                android:layout_height="53dp"
                android:backgroundTint="@color/rosa"
                android:layout_below="@+id/weightEditText"
                android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:text="Dodaj te탑inu"
            android:layout_marginTop="15dp"
            android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>



