<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/crna2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/logoImageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unesite te탑inu"
            android:textSize="22sp"
            android:textColor="@color/rosa"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/dateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum:"
        android:layout_marginTop="30dp"
        android:textColor="@color/white" />

    <!-- Dodan DatePicker umjesto EditText za unos datuma -->
    <DatePicker
        android:id="@+id/dateDatePicker"
        android:layout_width="379dp"
        android:layout_height="191dp"
        android:layout_marginTop="10dp"
        android:calendarViewShown="false"
        android:layout_gravity="center"
        android:datePickerMode="spinner"
        android:spinnersShown="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vrsta ljubimca:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/petTypeEditText"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:hint="Unesite vrstu ljubimca." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ime ljubimca:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/petNameEditText"
        android:layout_width="378dp"
        android:layout_height="55dp"
        android:hint="Unesite ime ljubimca." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Te탑ina:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="378dp"
        android:layout_height="55dp"
        android:hint="Unesite te탑inu."
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/addWeightButton"
        android:layout_width="260dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/rosa"
        android:layout_gravity="center"
        android:text="Unesi te탑inu"
        android:layout_marginTop="40dp"
        android:textColor="@color/white" />

</LinearLayout>
