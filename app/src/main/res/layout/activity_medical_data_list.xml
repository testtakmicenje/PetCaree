<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/logoImageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start"
            android:tint="@color/rosa"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicinski podaci"
            android:textSize="22sp"
            android:textColor="@color/rosa"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicalDataListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"/>

    <Button
        android:id="@+id/addMedicalDataButton"
        android:layout_width="260dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/rosa"
        android:layout_gravity="center"
        android:text="Dodaj medicinske podatke"
        android:layout_marginVertical="15dp"
        android:textColor="@color/crna2" />
</LinearLayout>
